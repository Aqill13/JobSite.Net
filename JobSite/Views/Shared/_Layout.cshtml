            margin-right: -40px;
            color: #3A86FF;
        }

        .search-right {
            display: flex;
            align-items: center;
        }

        #registerbtn:hover {
            color: #002766;
        }

        #loginbtn {
            background-color: #3A86FF;
            color: #fff;
        }

