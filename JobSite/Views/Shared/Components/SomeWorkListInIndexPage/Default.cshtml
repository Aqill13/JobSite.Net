@{
    Layout = null;
}
@model List<Work>

<style>
    .col-lg-12 .single_jobs .jobs_left {
        gap: 10px;
    }
    .job_lists_compact .col-lg-12 .single_jobs{
        border: 1px solid #9999 !important;
        background-color: #fff !important;
    }
    .job_lists_compact .row .icondiv {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .job_lists_compact .single_jobs .apply_now .heart_mark {
        opacity: 0;
    }

    .job_lists_compact .single_jobs:hover .apply_now .heart_mark {
            opacity: 1;
        }
</style>

@foreach (var w in Model)
{
    <div class="col-lg-12 col-md-12 box">
        <div class="single_jobs white-bg d-flex justify-content-between">
            <div class="jobs_left d-flex align-items-center">
                <div class="icondiv">
                    <div class="icon"><i class="@w.Field.Icon"></i></div>
                </div>
                <div class="jobs_conetent">
                    <a href="job_details.html"><h4>@w.Position</h4></a>
                    <div class="links_locat d-flex align-items-center">
                        <div class="location">
                            <p> <i class="fa-solid fa-location-dot"></i> @w.City.Name</p>
                        </div>
                        <div class="location">
                            <p> <i class="fa fa-clock-o"></i> @w.ModeOfWork</p>
                        </div>
                        <div class="location">
                            @if(!w.IsNegotiable)
                            {
                                <p><i class="fa-solid fa-manat-sign"></i> @w.Salary</p>
                            }
                            else
                            {
                                <p><i class="fa-solid fa-manat-sign"></i> Razılaşma</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="jobs_right">
                <div class="apply_now">
                    <a class="heart_mark" href="#"> <i class="ti-heart"></i> </a>
                    <a asp-controller="Jobs" asp-action="JobDetails" asp-route-id="@w.Id" class="boxed-btn3">ㅤƏtraflıㅤ</a>
                </div>
                <div class="date">
                    <p>@w.PublishDate</p>
                </div>
            </div>
        </div>
    </div>
}