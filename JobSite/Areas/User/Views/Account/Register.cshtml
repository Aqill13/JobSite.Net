
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel

<style>
    /* From Uiverse.io by kamehame-ha */
    .coolinput {
        display: flex;
        flex-direction: column;
        width: fit-content;
        position: static;
        width: 100%;
    }

        .coolinput span {
            font-size: 13px;
            margin-left: 10px;
        }

        .coolinput label.text {
            font-size: 14px;
            color: #717070cc;
            position: relative;
            top: 0.5rem;
            margin: 0 0 0 7px;
            padding: 0 3px;
            background: #fff;
            width: fit-content;
        }

        .coolinput input.input {
            padding: 11px 10px;
            font-size: 15px;
            border: 2px #aaa8a87b solid;
            border-radius: 20px;
            background: #fff;
        }

            .coolinput input.input:focus {
                outline: none;
                border-color: #818cf8;
            }

        .coolinput:focus-within label.text {
            color: #818cf8;
        }

        .register_section form {
            width: 35%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 7px #444;
            border-radius: 15px;
            position: relative;
            margin-top: 140px;
        }
    /* submit button */
    .button {
        position: relative;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        padding-block: 0.5rem;
        padding-inline: 1.25rem;
        background-color: rgb(23, 96, 142);
        border-radius: 9999px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #ffff;
        gap: 10px;
        border: 3px solid #ffffff4d;
        outline: none;
        overflow: hidden;
        font-size: 18px;
        width: 100%;
    }

    .icon {
        width: 24px;
        height: 24px;
        transition: all 0.3s ease-in-out;
    }

    .button:hover {
        transform: scale(1.02);
        border-color: #fff9;
    }

        .button:hover .icon {
            transform: translate(4px);
        }

        .button:hover::before {
            animation: shine 1.5s ease-out infinite;
        }

    .button::before {
        content: "";
        position: absolute;
        width: 100px;
        height: 100%;
        background-image: linear-gradient( 120deg, rgba(255, 255, 255, 0) 30%, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0) 70% );
        top: 0;
        left: -100px;
        opacity: 0.6;
    }

    @@keyframes shine {
        0% {
            left: -100px;
        }

        60% {
            left: 100%;
        }

        to {
            left: 100%;
        }
    }
</style>

<section class="register_section my-5">
    <form asp-area="User" asp-controller="Account" asp-action="Register" method="post" asp-antiforgery="true">
        <h2>Qeydiyyat</h2>
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <div class="d-flex gap-5">
            <div class="coolinput mr-1" >
                <label for="input" class="text">Ad<span class="text-danger" asp-validation-for="Firstname"></span></label>
                <input type="text" asp-for="Firstname" class="input" autocomplete="off" />
            </div>
            <div class="coolinput ml-1" >
                <label for="input" class="text">Soyad<span class="text-danger" asp-validation-for="Lastname"></span></label>
                <input type="text" asp-for="Lastname" class="input" autocomplete="off" />
            </div>
        </div>
        <div class="coolinput">
            <label for="input" class="text">Email<span class="text-danger" asp-validation-for="Email"></span></label>
            <input type="email" asp-for="Email" class="input" autocomplete="off" />
        </div>
        <div class="coolinput">
            <label for="input" class="text">İstifadəçi adı<span class="text-danger" asp-validation-for="Username"></span></label>
            <input type="text" asp-for="Username" class="input" autocomplete="off" />
        </div>
        <div class="coolinput">
            <label for="input" class="text">Parol<span class="text-danger" asp-validation-for="Password"></span></label>
            <input type="password" asp-for="Password" class="input" autocomplete="off" />
        </div>
        <div class="coolinput">
            <label for="input" class="text">Parolu təkrarlayın <span class="text-danger" asp-validation-for="ConfirmPassword"></span></label>
            <input type="password" asp-for="ConfirmPassword" class="input" autocomplete="off" />
        </div>
        <br />
        <button class="button" type="submit">
            Qeydiyyat
            <svg fill="currentColor" viewBox="0 0 24 24" class="icon">
                <path clip-rule="evenodd"
                      d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z"
                      fill-rule="evenodd"></path>
            </svg>
        </button>
        <br />
        <p style="text-align:center">Bir hesabınız var? <a asp-area="User" asp-controller="Account" asp-action="Login" style="text-decoration:underline">Daxil olun</a></p>
    </form>
</section>
